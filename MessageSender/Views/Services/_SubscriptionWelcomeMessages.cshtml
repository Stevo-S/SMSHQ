@model IEnumerable<MessageSender.Models.SubscriptionWelcomeMessage>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MessageText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => message.MessageText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => message.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => message.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => message.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => message.EndDate)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "SubscriptionWelcomeMessages", new { id = message.Id })" class="btn btn-info">
                            <span class="glyphicon glyphicon-edit"></span>
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
